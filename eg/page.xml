<?xml version="1.0" ?>
<!DOCTYPE pagekit SYSTEM "./pagekit.dtd">
<SITE>
  <PAGE page_id = "customize"
    use_nav = "yes"
    is_popup = "no"
    nav_title = "Customize"
    require_login = "no"
    parent_id = "examples"
    new_credential = "no">
    <TMPL_VAR NAME = "html_title">PageKit.org | Customize</TMPL_VAR>
    <TMPL_LOOP NAME = "demo_desc">
      <TMPL_ITEM>
	<TMPL_VAR NAME = "feature">Session Management</TMPL_VAR>
	<TMPL_VAR NAME = "description">Four colors, link_color, text_color, bgcolor, and mod_color
	  are set and stored in $pk->{session}.  MyPageKit.pm retrives the values from the session
	  and sets the corresponding view parameters.</TMPL_VAR>
      </TMPL_ITEM>
    </TMPL_LOOP>
  </PAGE>
  <PAGE page_id = "examples"
    use_nav = "yes"
    is_popup = "no"
    nav_title = "Examples"
    require_login = "no"
    parent_id = "index"
    new_credential = "no">
    <TMPL_VAR NAME = "html_title">PageKit.org | Examples</TMPL_VAR>
    <TMPL_LOOP NAME = "demo_desc">
      <TMPL_ITEM>
	<TMPL_VAR NAME = "feature">Built-in Navigation</TMPL_VAR>
	<TMPL_VAR NAME = "description">Navigation object is created by using the PKIT_NAME tag in the template, and the use_nav, nav_title, and parent_id 
		attributes in the XML file.</TMPL_VAR>
      </TMPL_ITEM>
    </TMPL_LOOP>
  </PAGE>
  <PAGE page_id = "index"
    use_nav = "no"
    is_popup = "no"
    nav_title = "Home"
    require_login = "no"
    cache = "normal"
    new_credential = "no">
    <TMPL_VAR NAME = "html_title">Welcome to PageKit.org</TMPL_VAR>
    <TMPL_LOOP NAME = "demo_desc">
      <TMPL_ITEM>
	<TMPL_VAR NAME = "feature"></TMPL_VAR>
	<TMPL_VAR NAME = "description"></TMPL_VAR>
      </TMPL_ITEM>
    </TMPL_LOOP>
    <TMPL_LOOP NAME = "news">
      <TMPL_ITEM>
	<TMPL_VAR NAME = "date">October 31th, 2000</TMPL_VAR>
	<TMPL_VAR NAME = "title">Release of PageKit 0.05</TMPL_VAR>
	<TMPL_VAR NAME = "description">Added language localization support, replaced views and modules with includes</TMPL_VAR>
      </TMPL_ITEM>
      <TMPL_ITEM>
	<TMPL_VAR NAME = "date">August 29th, 2000</TMPL_VAR>
	<TMPL_VAR NAME = "title">Release of PageKit 0.04</TMPL_VAR>
	<TMPL_VAR NAME = "description">Added support for XML &lt;TMPL_LOOP&gt; tag</TMPL_VAR>
      </TMPL_ITEM>
      <TMPL_ITEM>
	<TMPL_VAR NAME = "date">August 29th, 2000</TMPL_VAR>
	<TMPL_VAR NAME = "title">Release of PageKit 0.03</TMPL_VAR>
	<TMPL_VAR NAME = "description">Replaced use of Apache::Session with adaption of HTML::Embperl::Session</TMPL_VAR>
      </TMPL_ITEM>
      <TMPL_ITEM>
	<TMPL_VAR NAME = "date">August 28th, 2000</TMPL_VAR>
	<TMPL_VAR NAME = "title">Release of PageKit 0.02</TMPL_VAR>
	<TMPL_VAR NAME = "description">Added XML support for attributes and content</TMPL_VAR>
      </TMPL_ITEM>
      <TMPL_ITEM>
	<TMPL_VAR NAME = "date">August 24th, 2000</TMPL_VAR>
	<TMPL_VAR NAME = "title">Release of PageKit 0.01</TMPL_VAR>
	<TMPL_VAR NAME = "description">Initial Release</TMPL_VAR>
      </TMPL_ITEM>
    </TMPL_LOOP>
  </PAGE>
  <PAGE page_id = "license"
    use_nav = "no"
    is_popup = "no"
    require_login = "no"
    parent_id = "index"
    new_credential = "no">
    <TMPL_VAR NAME = "html_title">RICOH SOURCE CODE PUBLIC LICENSE 1.0 - PageKit Application Framework</TMPL_VAR>
  </PAGE>
  <PAGE page_id = "login1"
    use_nav = "yes"
    is_popup = "no"
    nav_title = "Login"
    require_login = "no"
    parent_id = "examples"
    new_credential = "no">
    <TMPL_VAR NAME = "html_title">PageKit.org | Login</TMPL_VAR>
    <TMPL_LOOP NAME = "demo_desc">
      <TMPL_ITEM>
	<TMPL_VAR NAME = "feature">Authentication</TMPL_VAR>
	<TMPL_VAR NAME = "description">This login form logs a user in.</TMPL_VAR>
      </TMPL_ITEM>
    </TMPL_LOOP>
  </PAGE>
  <PAGE page_id = "login2"
    use_nav = "no"
    is_popup = "no"
    require_login = "no"
    parent_id = "login1"
    error_page = "login1"
    new_credential = "yes">
  </PAGE>
  <PAGE page_id = "newacct1"
    use_nav = "yes"
    is_popup = "no"
    nav_title = "New Account"
    require_login = "no"
    parent_id = "examples"
    new_credential = "no">
    <TMPL_VAR NAME = "html_title">PageKit.org | New Account</TMPL_VAR>
    <TMPL_LOOP NAME = "demo_desc">
      <TMPL_ITEM>
	<TMPL_VAR NAME = "feature">Form Validation</TMPL_VAR>
	<TMPL_VAR NAME = "description">Validates fields to make sure that they are filled in correctly.  If there is an error, highlights field in red.</TMPL_VAR>
      </TMPL_ITEM>
    </TMPL_LOOP>
  </PAGE>
  <PAGE page_id = "newacct2"
    use_nav = "yes"
    is_popup = "no"
    nav_title = "Account Created"
    require_login = "no"
    parent_id = "newacct1"
    error_page = "newacct1"
    new_credential = "yes">
    <TMPL_VAR NAME = "html_title">PageKit.org | New Account</TMPL_VAR>
  </PAGE>
</SITE>
