<PKIT_COMPONENT NAME="/top">
<h1>Form Validation/Sticky HTML Form</h1>
<form method="get" action="form_validation_done">
<PKIT_ERRORFONT NAME="email">Email:</PKIT_ERRORFONT><br>
<input type="text" name="email">
<p>
<PKIT_ERRORFONT NAME="phone">Phone:</PKIT_ERRORFONT><br>
<input type="text" name="phone">
<br>
<PKIT_ERRORFONT NAME="likes">Which of the following things do you like?</PKIT_ERRORFONT><br>
<select name="likes" multiple size="6">
<option>Pizza</option>
<option>Ice Cream</option>
<option>Perl</option>
<option>Goodfellas</option>
<option>Simpsons</option>
<option>Sopranos</option>
</select>
<p>
<PKIT_ERRORFONT NAME="toppings">If you selected Pizza, which toppings do you
  like?</PKIT_ERRORFONT><br>
<input type="checkbox" name="toppings" value="Extra Cheese"> Extra Cheese<br>
<input type="checkbox" name="toppings" value="Green Peppers"> Green Peppers<br>
<input type="checkbox" name="toppings" value="Italian Sausage"> Italian Sausage<br>
<input type="checkbox" name="toppings" value="Pepperoni"> Pepperoni<br>
<p>
<input type="submit" name="submit" value="Submit">
</form>
